{
  "manifestVersion": 1,
  "version": "1.0.0",
  "name": "Work Item Decomposer",
  "id": "work-item-decomposer",
  "publisher": "teociaps",
  "description": "Quickly decompose work item into sub-hierarchies",
  "categories": [
    "Azure Boards"
  ],
  "tags": [
    "Work Item",
    "Decompose",
    "Hierarchy"
  ],
  "branding": {
    "color": "#1E2136",
    "theme": "dark"
  },
  "icons": {
    "default": "marketplace/logo.png"
  },
  "scopes": [
    "vso.work_full"
  ],
  "links": {
    "support": {
      "uri": "mailto:teociaps.github@gmail.com"
    },
    "license": {
      "uri": "https://github.com/teociaps/azdo-workitem-decomposer/blob/main/LICENSE"
    },
    "privacy": {
      "uri": "https://github.com/teociaps/azdo-workitem-decomposer/blob/main/PRIVACY.md"
    },
    "homepage": {
      "uri": "https://github.com/teociaps/azdo-workitem-decomposer"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/teociaps/azdo-workitem-decomposer"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "content": {
    "details": {
      "path": "marketplace/details.md"
    }
  },
  "demands": [
    "api-version/7.2"
  ],
  "contributions": [
    {
      "id": "contextMenu",
      "type": "ms.vss-web.action",
      "description": "Decompose this work item into sub-items",
      "targets": [
        "ms.vss-work-web.work-item-context-menu"
      ],
      "properties": {
        "text": "Decompose work item...",
        "title": "Decompose this work item",
        "toolbarText": "Decompose work item...",
        "icon": {
          "light": "images/decomposer-light-icon.png",
          "dark": "images/decomposer-dark-icon.png"
        },
        "group": "actions",
        "uri": "decomposerContextMenu.html"
      }
    },
    {
      "id": "decomposerPanel",
      "type": "ms.vss-web.external-content",
      "description": "Panel for decomposing work items",
      "targets": [],
      "properties": {
        "uri": "decomposerPanelLoader.html"
      }
    }
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "marketplace",
      "addressable": true
    }
  ]
}